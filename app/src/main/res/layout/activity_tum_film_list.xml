<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TumFilmList">
    
    <com.mancj.materialsearchbar.MaterialSearchBar
        android:id="@+id/searchBarTumFilmler"
        android:layout_alignParentTop="true"
        app:mt_speechMode="false"
        app:mt_hint="Film adını giriniz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.mancj.materialsearchbar.MaterialSearchBar>
    
    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/searchBarTumFilmler"
        android:id="@+id/recylerTumFilmler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

  
</RelativeLayout>