<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/admin_background"
    android:layout_height="match_parent"
    tools:context=".AdminIslemleri">


    <Button
        android:id="@+id/btnKategoriEkle"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginTop="250dp"
        android:layout_height="wrap_content"
        android:text="FİLM KATEGORİ EKLE" />

    <Button
        android:layout_below="@id/btnKategoriEkle"
        android:id="@+id/btnFilmEkle"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:text="FİLM EKLE" />

    <Button
        android:layout_below="@id/btnFilmEkle"
        android:id="@+id/btnFilmSil"
        android:background="#fff"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="FİLM SİL / GÜNCELLE" />




    <Button
        android:layout_below="@id/btnFilmSil"
        android:id="@+id/btnListele"
        android:background="#fff"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="FİLMLERİ LİSTELE" />

    <TextView
        android:onClick="adminAnaMenuyeDon"
       android:layout_alignParentBottom="true"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="15sp"
        android:gravity="center"
        android:background="#fff"
        android:text="Anamenüye dön"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>